.hero{
  height: 100vh;
  position: relative;
  min-height: 650px;
}

.hero__content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;

  @include desktopHd() {
    max-width: 50%;
  }
  @include desktop() {
    max-width: none;
  }
}

.hero__bottom-btn {
  position: absolute;
  bottom: 20px;
  left: 50%;
  transform: translateX(-50%);

  @include tablets() {
    display: none;
  }
}

