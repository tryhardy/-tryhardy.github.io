script(type="text/x-template")#skills
  .skills
    ul.skills-list(v-for="category in skills" :key="category.title")
        li.skills-list__item
          skills-row(
            :category="category"
          )

script(type="text/x-template")#skills-row
  .skills-row
    .skills-row__title {{category.title}}
    ul.skills-row__list
      li.skills-row__item(v-for="skill in category.skills" :key="skill.id")
        skill(
            :skill="skill"
          )

script(type="text/x-template")#skill
  .skill
    .skill__title {{skill.title}}
    .skill__pie
      <svg width="100%" height="100%" viewBox="0 0 42 42" class="donut">
        <linearGradient id="linear-gradient">
          <stop offset="0%" stop-color="#9300e8"/>
          <stop offset="100%" stop-color="#4a00ed"/>
        </linearGradient>
        <circle class="donut-ring" cx="21" cy="21" r="15.91549430918954" fill="transparent" stroke="#e9e9e9" stroke-width="2"></circle>
        <circle ref="circle" stroke-dasharray="100" stroke-dashoffset="15" class="donut-segment" cx="21" cy="21" r="15.91549430918954" fill="transparent" stroke="url(#linear-gradient)" stroke-width="5"></circle>
      </svg>